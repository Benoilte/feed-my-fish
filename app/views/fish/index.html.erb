<div class="index-searchbar">
<%= form_with url: fish_index_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Rechercher un poisson"
  %>
  <%= button_tag type:'submit', class: "btn btn-primary" do %>
    <i class="fa-solid fa-magnifying-glass"></i>
  <% end %>
<% end %>


</div>
<div class="fishes-cards">
  <div class="cards">
    <% @fish.each do |fish| %>
    <div class="fish-card">
      <%= link_to fish_path(fish), class: "link-fish" do %>
        <% if fish.photo.attached?  %>
          <%= cl_image_tag fish.photo.key, class: "fish-image" %>
        <% else %>
          <img class="fish-image">
        <% end %>
        <div class="fish-informations">
          <div class="text-card">
            <h2><%= fish.title %></h2>
            <p><%= fish.specie %></p>
            <p><%= fish.location %></p>
          </div>
          <div class="rating">
            <h3>♥ <%= rand(1..5) %></h3>
            <h2><%= fish.daily_price %>€</h2>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
