<%= link_to "< Retour", fish_index_path, class: "btn-return" %>

<div class="m-3">
  <h2 class="m-3 text-center"><%= @fish.title.upcase %></h2>
  <div class="d-flex justify-content-center">
    <div class="card-trip-fish-show">
      <% if @fish.photo.attached?  %>
        <%= cl_image_tag @fish.photo.key %>
      <% else %>
        <%= image_tag "avatars/fishes/benoit_avatar.jpg", alt: "a fish" %>
      <% end %>
      <div class="card-trip-fish-show-infos">
        <div>
          <h3>A propos de <%= @fish.title %> :</h3>
          <p><%= @fish.description %></p>
          <div class="mt-2">
            <h3>Details pratiques :</h3>
            <ul>
              <li> Espèce : <%= @fish.specie %></li>
              <li> Zone géographique : <%= @fish.location %></li>
            </ul>
          </div>
        </div>
        <h2 class="card-trip-fish-show-pricing"><%= @fish.daily_price %>€ / jour</h2>
        <%# IMPORTANT : modifier avec avatar du fish owner %>
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-fish-show-user avatar-bordered" />
      </div>
    </div>
  </div>
  <div class="text-center">
    <div class="form-bloc">
      <%= simple_form_for([@fish, @booking]) do |f| %>
      <div class="form" data-controller="totalprice" data-price="<%= @fish.daily_price %>">
        <h5><strong>Je veux garder ce poisson</strong></h5>
        <div class="row d-flex justify-content-center">
          <div class="col-3">
            <%= f.input :start_time, as: :date, html5: true, label: "A partir du...", input_html: { data: {'totalprice-target':'start','action':'change->totalprice#updateTotalPrice' } } %>
          </div>
          <div class="col-3">
            <%= f.input :end_time, as: :date, html5: true, label: "Jusqu'au...", input_html: { data: {'totalprice-target':'end','action':'change->totalprice#updateTotalPrice' } } %>
          </div>
          <div>
            <h3>Durée de la mission :</h3>
            <h4><span data-totalprice-target="duration">0</span> jours</h4>
          </div>
          <div>
            <h3>Rémunération totale :</h3>
            <h4><span data-totalprice-target="result">0</span> €</h4>
          </div>
          <div class="btn-submit">
            <%= f.button :submit, "Demander à garder ce poisson" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
