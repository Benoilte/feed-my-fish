<%= simple_form_for(@fish) do |f| %>
  <%= f.input :title %>
  <%# Méthode ci-dessous à reliée avec la variable "FISH" dans le modèle fish %>
  <%= f.input :specie, collection: ["Blodfish", "Poisson volant", "Poisson rouge", "Grosse carpe", "Poisson à dents", "Sirène", "Poisson combattant", "Guppies"] %>
  <%= f.input :description %>
  <%= f.input :picture_url, as: :file %>
  <%= f.input :location %>
  <%= f.input :daily_price %>
  <%= f.submit %>
<% end %>
